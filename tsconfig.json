{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build/extension",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "packages/extension",
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["packages/extension"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "packages/extension/test/jest-test-runner"
  ]
}
