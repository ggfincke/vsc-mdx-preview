{
  "name": "vscode-mdx-preview",
  "displayName": "MDX Preview",
  "description": "MDX Preview",
  "version": "1.0.0-alpha.1",
  "publisher": "ggfincke",
  "author": "Garrett Fincke",
  "repository": "https://github.com/xyc/vscode-mdx-preview",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Preview",
    "mdx",
    "markdown",
    "JavaScript",
    "React"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:mdx",
    "onCommand:mdx-preview.commands.openPreview",
    "onCommand:mdx-preview.commands.refreshPreview",
    "onCommand:mdx-preview.commands.toggleUseVscodeMarkdownStyles",
    "onCommand:mdx-preview.commands.toggleUseWhiteBackground",
    "onCommand:mdx-preview.commands.changeSecuritySettings"
  ],
  "main": "./build/extension/extension",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "In Restricted Mode, MDX Preview renders content as static HTML only. JavaScript execution and custom components require a trusted workspace with scripts enabled.",
      "restrictedConfigurations": [
        "mdx-preview.preview.enableScripts"
      ]
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "mdx",
        "aliases": [
          "Markdown React",
          "MDX",
          "mdx"
        ],
        "extensions": [
          "mdx"
        ]
      }
    ],
    "commands": [
      {
        "command": "mdx-preview.commands.openPreview",
        "title": "Open MDX Preview",
        "category": "MDX",
        "icon": {
          "light": "./assets/preview-light.png",
          "dark": "./assets/preview-dark.png"
        }
      },
      {
        "command": "mdx-preview.commands.refreshPreview",
        "title": "Refresh Preview",
        "category": "MDX",
        "icon": {
          "light": "./assets/refresh-light.png",
          "dark": "./assets/refresh-dark.png"
        }
      },
      {
        "command": "mdx-preview.commands.toggleUseVscodeMarkdownStyles",
        "title": "Toggle Using VSCode Markdown Styles",
        "category": "MDX"
      },
      {
        "command": "mdx-preview.commands.toggleUseWhiteBackground",
        "title": "Toggle Using White Background",
        "category": "MDX"
      },
      {
        "command": "mdx-preview.commands.changeSecuritySettings",
        "title": "Change Security Settings",
        "category": "MDX"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == mdx",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == javascript",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == typescriptreact",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.refreshPreview",
          "when": "mdxPreviewFocus",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == mdx",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == javascript",
          "group": "navigation"
        },
        {
          "command": "mdx-preview.commands.openPreview",
          "when": "editorLangId == typescriptreact",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mdx-preview.commands.openPreview",
        "key": "ctrl+k x",
        "mac": "cmd+k x"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MDX Preview",
      "properties": {
        "mdx-preview.preview.enableScripts": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable JavaScript execution in MDX preview. **Requires a trusted workspace.** When disabled, MDX is rendered as static HTML without executing any code.",
          "scope": "resource"
        },
        "mdx-preview.preview.previewOnChange": {
          "type": "boolean",
          "default": true,
          "description": "If set to true, previews on file change; If set to false, previews on file save",
          "scope": "resource"
        },
        "mdx-preview.preview.security": {
          "type": "string",
          "description": "Security policy settings",
          "default": "strict",
          "enum": [
            "strict",
            "disabled"
          ],
          "enumDescriptions": [
            "Do not allow insecure content or eval",
            "Allow insecure content (not recommended)"
          ],
          "scope": "resource"
        },
        "mdx-preview.build.useSucraseTranspiler": {
          "type": "boolean",
          "default": false,
          "description": "Use sucrase as transpiler",
          "scope": "resource"
        },
        "mdx-preview.preview.useVscodeMarkdownStyles": {
          "type": "boolean",
          "default": true,
          "description": "Use VSCode Markdown Stylings",
          "scope": "resource"
        },
        "mdx-preview.preview.useWhiteBackground": {
          "type": "boolean",
          "default": false,
          "description": "Use white background regardless of current theme settings",
          "scope": "resource"
        },
        "mdx-preview.preview.mdx.customLayoutFilePath": {
          "type": "string",
          "default": "",
          "description": "Path of custom layout file to use",
          "scope": "resource"
        }
      }
    },
    "walkthroughs": [
      {
        "id": "mdx-preview.gettingStarted",
        "title": "Get Started with MDX Preview",
        "description": "Learn how to preview MDX files with full rendering support",
        "steps": [
          {
            "id": "openMdxFile",
            "title": "Open an MDX File",
            "description": "Open any `.mdx` file in your workspace to get started.\n\nMDX combines Markdown with JSX, allowing you to use React components in your documentation.",
            "completionEvents": [
              "onLanguage:mdx"
            ]
          },
          {
            "id": "openPreview",
            "title": "Open the Preview",
            "description": "Use the keyboard shortcut or click the preview icon in the editor toolbar.\n\n**Keyboard shortcut:** `Cmd+K X` (Mac) or `Ctrl+K X` (Windows/Linux)\n\n[Open MDX Preview](command:mdx-preview.commands.openPreview)",
            "completionEvents": [
              "onCommand:mdx-preview.commands.openPreview"
            ]
          },
          {
            "id": "trustWorkspace",
            "title": "Trust Your Workspace",
            "description": "By default, MDX Preview runs in **Safe Mode** which renders static HTML only.\n\nTo enable JavaScript execution and custom React components, you need to:\n1. Trust this workspace\n2. Enable scripts in settings\n\n[Manage Workspace Trust](command:workbench.trust.manage)",
            "completionEvents": [
              "onContext:isWorkspaceTrusted"
            ]
          },
          {
            "id": "enableScripts",
            "title": "Enable Scripts",
            "description": "Now that your workspace is trusted, enable script execution to unlock full MDX rendering with React components.\n\n[Enable Scripts in Settings](command:workbench.action.openSettings?%5B%22mdx-preview.preview.enableScripts%22%5D)",
            "when": "isWorkspaceTrusted"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "vscode:package": "npm run test && vsce package",
    "build:extension": "tsc -p ./",
    "build": "npm run build:extension && npm run build:webview-app",
    "watch": "tsc -watch -p ./",
    "start:webview-app": "npm run start -w webview",
    "build:webview-app": "npm run build -w webview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "npm run build && node ./build/extension/test/runTest.js",
    "lint": "eslint packages/extension",
    "lint:fix": "eslint packages/extension --fix",
    "format": "prettier --write \"packages/**/*.{ts,js,json}\" \"*.{md,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,js,json}\" \"*.{md,json}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@jest/environment": "^29.7.0",
    "@jest/test-result": "^29.7.0",
    "@types/node": "^20.0.0",
    "@types/resolve": "^1.20.6",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-proposal-export-default-from": "^7.24.0",
    "@babel/plugin-transform-class-properties": "^7.24.0",
    "@babel/plugin-transform-export-namespace-from": "^7.24.0",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.24.0",
    "@babel/plugin-transform-optional-chaining": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@mdx-js/mdx": "^3.0.0",
    "comlink": "^4.4.1",
    "es-module-lexer": "^2.0.0",
    "gray-matter": "^4.0.2",
    "is-module": "^1.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx": "^3.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "resolve": "^1.22.11",
    "sass": "^1.80.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.4.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "extensionPack": [
    "unifiedjs.vscode-mdx"
  ],
  "overrides": {
    "@types/node": "^20.0.0"
  }
}
